#!/usr/bin/env python

# energy 
MeV    =            1.0
keV    = MeV   / 1000.0 
GeV    = MeV   * 1000.0
TeV    = GeV   * 1000.0

# time 
ns     =            1.0
ps     = ns    / 1000.0
fs     = ps    / 1000.0 
us     = ns    * 1000.0
ms     = us    * 1000.0

# length 
mm     =            1.0
cm     = mm    *  100.0
meter  = mm    * 1000.0
km     = meter * 1000.0
um     = mm    / 1000.0
micron = mm    / 1000.0

# boolean 
FALSE  = (1>2)
TRUE   = (1<2)

