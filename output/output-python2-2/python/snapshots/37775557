from UMLException import UMLException

class UserException(UMLException):
    """
    Super class for all user exceptions. After user exceptions occur only a dialog with exception name
    and args is shown. See DevException if you want traceback. 
    """
    pass


class ConnectionRestrictionError(UserException):
    """
    Raised when connection restriction is broken
    """
    pass

class ConnectionError(UserException):
    pass


class ProjectError(UserException):
    pass


class XMLError(UserException):
    pass


class ExportError(UserException):
    pass


class ElementAttributeError(UserException):
    pass


class DrawingError(UserException):
    pass

