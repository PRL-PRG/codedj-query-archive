from django.template import Library
from django.conf import settings

register = Library()

@register.simple_tag
def ductus_media_prefix():
    return settings.DUCTUS_MEDIA_PREFIX

@register.simple_tag
def ductus_site_name():
    return settings.DUCTUS_SITE_NAME
